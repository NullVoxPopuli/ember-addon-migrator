{
  "name": "ember-addon-migrator",
  "description": "tool for migrating ember addons to the addon v2 format",
  "version": "1.7.1",
  "type": "module",
  "license": "MIT",
  "author": "NullVoxPopuli",
  "repository": {
    "url": "https://github.com/NullVoxPopuli/ember-addon-migrator",
    "type": "https",
    "directory": "./cli"
  },
  "keywords": [
    "ember",
    "embroider",
    "ember-addon",
    "blueprint"
  ],
  "bin": {
    "ea2": "./bin.js",
    "migrate-addon": "./bin.js",
    "ember-addon-migrator": "./bin.js"
  },
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./log": {
      "import": "./src/log.js"
    }
  },
  "files": [
    "src/**/*",
    "bin.js"
  ],
  "scripts": {
    "build:types": "tsc --build",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "pnpm lint:js",
    "lint:js": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm --filter 'tests' test"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "common-tags": "^1.8.2",
    "ember-apply": "2.5.2",
    "ember-cli": "^4.9.2",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "global": "^4.4.0",
    "globby": "^13.1.3",
    "latest-version": "^6.0.0",
    "listr": "^0.14.3",
    "merge": "^2.1.1",
    "semver": "^7.3.8",
    "types-package-json": "^2.0.39",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@nullvoxpopuli/eslint-configs": "^3.0.4",
    "@types/common-tags": "^1.8.1",
    "@types/fs-extra": "^9.0.13",
    "@types/listr": "^0.14.4",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-plugin-decorator-position": "^5.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "node-fetch": "^3.3.0",
    "prettier": "^2.8.3",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "volta": {
    "node": "16.14.0"
  }
}
