{
  "name": "ember-addon-migrator",
  "description": "tool for migrating ember addons to the addon v2 format",
  "version": "1.7.1",
  "type": "module",
  "license": "MIT",
  "author": "NullVoxPopuli",
  "repository": {
    "url": "https://github.com/NullVoxPopuli/ember-addon-migrator",
    "type": "https",
    "directory": "./"
  },
  "keywords": [
    "ember",
    "embroider",
    "ember-addon",
    "blueprint"
  ],
  "bin": {
    "ea2": "./bin.js",
    "migrate-addon": "./bin.js",
    "ember-addon-migrator": "./bin.js"
  },
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./captured-addon": {
      "import": "./src/captured-addon/index.js"
    },
    "./captured-addon/utils/fs-helpers": {
      "import": "./src/captured-addon/utils/fs-helpers.js"
    }
  },
  "files": [
    "src/**/*",
    "bin.js"
  ],
  "scripts": {
    "release": "changeset publish",
    "build:types": "tsc --build",
    "lint": "pnpm lint:js",
    "lint:js": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm --filter 'tests' test"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "common-tags": "^1.8.2",
    "ember-apply": "2.5.2",
    "ember-cli": "^4.1.1",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "global": "^4.4.0",
    "globby": "^13.1.1",
    "latest-version": "^6.0.0",
    "listr": "^0.14.3",
    "merge": "^2.1.1",
    "pnpm": "^7.22.0",
    "semver": "^7.3.5",
    "types-package-json": "^2.0.39",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@nullvoxpopuli/eslint-configs": "^3.0.3",
    "@types/common-tags": "^1.8.1",
    "@types/fs-extra": "^9.0.13",
    "@types/listr": "^0.14.4",
    "@types/semver": "^7.3.9",
    "eslint": "^8.32.0",
    "eslint-plugin-decorator-position": "^5.0.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "node-fetch": "^3.2.0",
    "prettier": "^2.8.3",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "ember-cli-htmlbars"
      ],
      "ignore-notes": {
        "ember-cli-htmlbars": "required by ember-template-imports, via eslint-plugin-ember, via @nvp/eslint-configs"
      }
    }
  },
  "volta": {
    "node": "16.14.0",
    "yarn": "1.22.17"
  }
}
