{
  "compilerOptions": {
    // Path resolution
    "baseUrl": "./",
    "moduleResolution": "node",
    // We only use tsc for type checking
    // "declarationDir": "./declarations",
    // "emitDeclarationOnly": true,
    "declaration": true,
    "noEmit": true,
    // Build settings
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    // Features
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Strictness / Correctness
    "strict": true
  },
  "include": [
    "../src/**/*",
    "./**/*"
  ],
}
